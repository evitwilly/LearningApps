<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.freeit.tapper.presentation.view.BounceAppearingView
        android:id="@+id/bounce_appearing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center" >

        <TextView
            android:id="@+id/number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textSize="70sp"
            android:textColor="@color/purple_500"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_button"
            android:layout_width="@dimen/floating_action_button_size"
            android:layout_height="@dimen/floating_action_button_size"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/purple_500"
            app:tint="@color/white"
            app:maxImageSize="@dimen/floating_action_button_max_image_size"
            app:srcCompat="@drawable/ic_add_24"
            app:fabCustomSize="@dimen/floating_action_button_size" />

    </androidx.appcompat.widget.LinearLayoutCompat>



</FrameLayout>